FROM node:20-alpine AS base

WORKDIR /usr/src/app

# Install OS dependencies needed by Prisma / node-gyp (if any)
RUN apk add --no-cache openssl python3 make g++ bash

# Install dependencies with npm (ignore bun.lock in container)
FROM base AS deps

COPY package.json ./

RUN npm install

FROM base AS builder

COPY --from=deps /usr/src/app/node_modules ./node_modules
COPY . .

RUN npx prisma generate || echo "Prisma generate skipped" && \
    npx tsc -b

FROM node:20-alpine AS runner

WORKDIR /usr/src/app

ENV NODE_ENV=production

RUN apk add --no-cache openssl bash

COPY --from=builder /usr/src/app/dist ./dist
COPY package.json ./
COPY --from=builder /usr/src/app/node_modules ./node_modules

EXPOSE 4000

CMD ["node", "dist/index.js"]

